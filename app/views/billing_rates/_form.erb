<%= f.fields_for :billing_rate do |rate| %>
  <div class="row clear">
    <div class="title"><%= rate.label :dollars, "Billing rate" %></div>
    <div class="content">
      <%= rate.text_field :dollars, :size => 10 %>
      <%= rate.label :units, "per" %>
      <%= rate.select :units, BillingRate::UNIT_OPTIONS %>
      <span class="estimated-hourly" style="display:<%= rate.object.units == "hour" ? "none" : "block" %>">
        <%= rate.label :hourly_rate_for_calculations %>
        <%= rate.text_field :hourly_rate_for_calculations, :size => 5 %>
      </span>
    </div>
  </div>
<% end %>
