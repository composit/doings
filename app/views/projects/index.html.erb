<%= content_for( :header ) do %>
  <h1>Projects</h1>
<% end %>

<div id="projects">
  <%= render( :partial => "line", :collection => @projects ) %>
</div>
<% if( @client && can?( :update, @client ) ) %>
  <%= link_to "new project", "#", :id => "new-project" %>
  <div id="new-project-form">
    <%= render( :partial => "form", :object => generate_new_project( @client ) ) %>
  </div>
<% end %>
